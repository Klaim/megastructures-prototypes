intf_libs = # Interface dependencies.
impl_libs = # Implementation dependencies.
#import xxxx_libs += libhello%lib{hello}

./: lib{proto2-view} doc{README.md} manifest

lib{proto2-view}: {hxx ixx txx cxx}{*} $impl_libs $intf_libs

hxx{export}@./: cxx.importable = false

# Build options.
#
cxx.poptions =+ "-I$out_root" "-I$src_root"

{hbmia obja}{*}: cxx.poptions += -DPROTO2_VIEW_STATIC_BUILD
{hbmis objs}{*}: cxx.poptions += -DPROTO2_VIEW_SHARED_BUILD

# Export options.
#
lib{proto2-view}:
{
  cxx.export.poptions = "-I$out_root" "-I$src_root"
  cxx.export.libs = $intf_libs
}

liba{proto2-view}: cxx.export.poptions += -DPROTO2_VIEW_STATIC
libs{proto2-view}: cxx.export.poptions += -DPROTO2_VIEW_SHARED

# For pre-releases use the complete version to make sure they cannot be used
# in place of another pre-release or the final version. See the version module
# for details on the version.* variable values.
#
if $version.pre_release
  lib{proto2-view}: bin.lib.version = "-$version.project_id"
else
  lib{proto2-view}: bin.lib.version = "-$version.major.$version.minor"

# Install recreating subdirectories.
#
{hxx ixx txx}{*}:
{
  install         = include/
  install.subdirs = true
}
